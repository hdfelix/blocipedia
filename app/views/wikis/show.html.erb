<h3><%= @wiki.title %></h3>

<div class="row wiki-header">
  <div class="col-md-8">
    <br />
    <p class="lead"><small><%= @wiki.description %></small></p>
  </div>
</div>
<br />

<!--% if policy(Page.new).edit? %-->
<%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-success' %>
<!--% end %-->

<hr />

<div class="row">
	<!-- Pages -->
	<div class="col-md-6">
		<div class="panel panel-default">
			<div class="panel panel-header text-center">
				<span style="font-size: 28px">Pages</span>
			</div>
			<% if @wiki.pages.count > 0 %>
				<%= render @pages %>
				<!--%= will_paginate @pages %-->
			<% else %>
				<br />
				<h5 class="text-center">This wiki has no content yet.</h5>
				<br />
			<% end %>
		</div>
	</div>

	<!-- Collaborators -->
	<div class="col-md-6">
		<div class="panel panel-default">
			<div class="panel panel-header text-center">
				<span style="font-size: 28px">Collaborators</span>
			</div>
			<% if @wiki.collaborators.length > 0 %>
				<% @wiki.collaborators.each do |c| %>	
					<%= c.name %>
				<% end %>
				<!--%= will_paginate @pages %-->
			<% else %>
				<br />
				<h5 class="text-center">This wiki has no collaborators yet.</h5>
				<br />
			<% end %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-2 pull-left">
		<%= link_to "Back", wikis_path, class: 'btn btn-warning' %>
		<!--% if policy(Page.new).create? %-->
		<%= link_to "New Page", new_wiki_page_path(@wiki,@page), class: 'btn btn-success pull-right' %>
	</div>
	<div class="col-md-4"></div>
	<div class="col-md-4 pull-left">
		<%= form_for @wiki do |f| %>
			<div class='form-group'>
			<%= f.label :collaborators %>
			<%= f.collection_select :collaborator_ids, User.all, :id, :name, {}, {multiple: true} %>
			<%= f.submit 'Add Collaborators' %>
	</div>
		<% end %>	
	</div>
</div>
