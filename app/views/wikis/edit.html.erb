<h1>Edit Wiki</h1>

<div class="row">
<div class="col-md-8">
<%= form_for @wiki do |f| %>
  <div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control', placeholder:  "enter wiki title" %>
  </div>
  <div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter wiki description" %>
  </div>
  <!--div class="form-group"-->
  <!--%= f.label :public, class: 'checkbox' do %-->
  <!--%= f.check_box :public %> Public wiki -->
  <!--% end %-->
  <!--/div-->
  <%= f.submit "Save", class: 'btn btn-success' %>&nbsp;
  <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger' %>
  <%= link_to "Cancel", wikis_path, class: 'btn btn-default' %>
<% end %>
</div>
 </div>

