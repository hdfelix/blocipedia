<div class="row">
	<div class="col-md-8">
	<h1><%= markdown @page.title %></h1>
	<div class="media">
	<small>
		<div class="media-body">
			<p><%= markdown @page.body %></p>
			<!--submitted <%= time_ago_in_words(@page.created_at) %> ago by-->
		 <!--%= @page.user.name %-->
	 </small>
	</div>
	<br />
	<div class="col-md-6">
		<br /> 
		<%= link_to "Edit", edit_wiki_page_path(@wiki, @page), class: 'btn btn-success' %>
		<%= link_to "Back", wikis_path, class: 'btn btn-warning' %>
		<%= link_to "Delete Page", [@wiki, @page], method: :delete, class: 'btn btn-danger', confirm: 'Are you sure you want to delete this page?' %>
	
	</div>
</div>
